<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:scrollbars="vertical">
    <HorizontalScrollView android:fillViewport="true" android:scrollbars="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" > 
        <TableLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/tablelayout" android:stretchColumns="*">
            <TableRow android:id="@+id/tableRow" >
                <TextView android:text="Account ID"/>
                <TextView android:text="Balance" android:paddingLeft="5sp" android:paddingRight="5sp"/>
                <TextView android:text="Equity" android:paddingLeft="5sp" android:paddingRight="5sp" />
                <TextView android:text="Day P/L" android:paddingLeft="5sp" android:paddingRight="5sp" />
                <TextView android:text="Gross P/L"  android:paddingLeft="5sp" android:paddingRight="5sp"/>                      
            </TableRow>
            <View android:layout_height="1dp" android:background="#999" />
        </TableLayout>
    </HorizontalScrollView>
</ScrollView>
